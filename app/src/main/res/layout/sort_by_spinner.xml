<?xml version="1.0" encoding="utf-8"?>

<!-- This layout file contains the layout for the Sort By Label and Spinner -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:padding="@dimen/margin"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/spinner_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_label"
        android:layout_centerVertical="true" />

    <Spinner
        android:id="@+id/spinner_sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginStart="@dimen/margin"
        android:entries="@array/spinner_labels"
        android:layout_toRightOf="@id/spinner_label"
        android:layout_toEndOf="@id/spinner_label"/>

</RelativeLayout>